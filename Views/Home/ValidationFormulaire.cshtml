@model TPLOCAL1.Models.FormulaireModel

<! DOCTYPE html>
<html>
<head>
    <title>Formulaire</title>
    <link rel="stylesheet" href="~/resources/Index.css" />
</head>

<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Formulaire TP HN avis</h1>
    </header>

    <nav>
        <ul>
            <li><a href="/Home/Index/Formulaire">Fill out form</a></li>
            <li><a href="/Home/Index/AvisList">Avis List</a></li>
        </ul>
    </nav>

    <section>


<p>Votre formulaire a bien été pris en compte</p>
<table>
    <caption>Informations personelles</caption>
    <tr>
        <td>Nom</td>
        <td>
            @Html.DisplayFor(m => m.Nom)
        </td>
    </tr>
    <tr>
        <td>Prénom</td>
        <td>
            @Html.DisplayFor(m => m.Prenom)
        </td>
    </tr>
    <tr>
        <td>Sexe</td>
        <td>
            @Html.DisplayFor(m => m.Sexe)
        </td>
    </tr>
    <tr>
        <td>Adresse</td>
        <td>
            @Html.DisplayFor(m => m.Adresse)
        </td>
    </tr>
    <tr>
        <td>Code Postal</td>
        <td>
            @Html.DisplayFor(m => m.CodePostal)
        </td>
    </tr>
    <tr>
        <td>Ville</td>
        <td>
            @Html.DisplayFor(m => m.Ville)
        </td>
    </tr>
    <tr>
        <td>Adresse mail</td>
        <td>
            @Html.DisplayFor(m => m.Mail)
        </td>
    </tr>
</table>

<table>
    <caption>Informations formation suivie</caption>
    <tr>
        <td>Date début formation</td>
        <td>
            @Html.DisplayFor(m => m.Date, "{0:D}")
        </td>
    </tr>
    <tr>
        <td>Formation suivie</td>
        <td>
            @Html.DisplayFor(m => m.Formation)
        </td>
    </tr>
</table>

<table>
    <caption>Avis sur la formation</caption>
    <tr>
        <td>Formation Cobol</td>
        <td>
            @Html.DisplayFor(m => m.AvisCobol)
        </td>
    </tr>
    <tr>
        <td>Formation C#</td>
        <td>
            @Html.DisplayFor(m => m.AvisSharp)
        </td>
    </tr>
</table>


    </section>
</body>
</html>